{
    "name": "respinar/contao-plyr-bundle",
    "description": "A Plyr bundle for Contao CMS",
    "keywords": ["contao", "plyr", "video", "bundle"],
    "type": "contao-bundle",
    "require": {
        "php": "^8.0",
        "contao/core-bundle": "^5.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Hamid Peywasti",
            "email": "hamid@respinar.com"
        }
    ],
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Respinar\\ContaoPlyrBundle\\": "src/",
            "classmap": [
                "contao/"
            ],
            "exclude-from-classmap": [
                "contao/config/",
                "contao/dca/",
                "contao/languages/",
                "contao/templates/"
            ]
        }
    },
    "extra": {
        "contao-manager-plugin": "Respinar\\ContaoPlyrBundle\\ContaoManager\\Plugin"
    }
}
